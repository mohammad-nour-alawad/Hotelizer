@model IEnumerable<DBConnection.Models.RoomSpecification>

@{
    ViewData["Title"] = "Index";
}

<h1>Room Specifications</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-bordered" id="RoomSpecification-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spec)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Room.FloorNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Spec.Type)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
        $('#RoomSpecification-table').dataTable();
    </script>
}

